@model Login

<form class="border-weight padding" asp-action="Login" method="post">
    <p class="position bold-text">Login</p>

    @* Login Email *@
    <div>
        <div class="form-group d-flex align-items-center justify-content-between">
            <label asp-for="LoginEmail" class="bold-text" >Email:</label>
            <input asp-for="LoginEmail" class="form-control w-70 border-weight" id="LoginEmail" placeholder="Enter email">
        </div>
        <span class="d-flex justify-content-end">
            <span asp-validation-for="LoginEmail" class="text-danger"></span>
        </span>
    </div>

    @* Login Password *@
    <div class=" mt-4">
        <div class="form-group d-flex align-items-center justify-content-between">
            <label asp-for="LoginPassword" class="bold-text">Password:</label>
            <input asp-for="LoginPassword" class="form-control w-70 border-weight" id="LoginPassword" placeholder="Enter Password">
        </div>
        <span class="d-flex justify-content-end">
            <span asp-validation-for="LoginPassword" class="text-danger"></span>
        </span>
    </div>

    @* Botton Login *@
    <span class="d-flex justify-content-end">
        <input type="submit" class="mt-4 btn-shadow" value="Login">
    </span>
</form>